<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MobileApp.FakeModules.Views.Main.FMainPageFlyout"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:extensions="http://xamarin.com/schemas/2020/toolkit"
    Title="MENU"
    Padding="{OnPlatform iOS='0,20,0,0',
                         Default='0'}"
    Background="{StaticResource HeaderHome}"
    BackgroundColor="{StaticResource HeaderHome}"
    IconImageSource="https://firebasestorage.googleapis.com/v0/b/autohlt.appspot.com/o/icon_f_menu.png?alt=media&amp;token=100412a2-34cc-4e0c-b301-2bac943986df">
    <StackLayout
        Margin="0"
        Padding="0"
        BackgroundColor="#0C0D12"
        Orientation="Vertical">
        <StackLayout
            Padding="15,20"
            Background="#2CC5D7"
            BackgroundColor="#2CC5D7"
            Orientation="Horizontal">
            <Image
                Aspect="Fill"
                HeightRequest="40"
                Source="{extensions:ImageResource Id=MobileApp.FakeModules.Resources.icon_user.png}"
                VerticalOptions="CenterAndExpand"
                WidthRequest="40" />
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="Chào bạn, Khách Hàng"
                TextColor="#000"
                VerticalOptions="CenterAndExpand" />
        </StackLayout>
        <ScrollView Background="#0C0D12" BackgroundColor="#0C0D12">
            <StackLayout BackgroundColor="Transparent" Spacing="0">
                <StackLayout.Resources>
                    <ResourceDictionary>
                        <Style TargetType="Label">
                            <Setter Property="Padding" Value="20,10" />
                            <Setter Property="TextColor" Value="#fff" />
                            <Setter Property="FontSize" Value="16" />
                            <Setter Property="BackgroundColor" Value="Transparent" />
                            <Setter Property="VerticalOptions" Value="FillAndExpand" />
                            <Setter Property="HorizontalOptions" Value="FillAndExpand" />
                            <Setter Property="Margin" Value="0" />
                        </Style>
                    </ResourceDictionary>
                </StackLayout.Resources>
                <Label Text="Chuyến đi của tôi">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="0" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
                <Label Text="Thông tin cá nhân">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="3" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
                <Label Text="Về chúng tôi">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="4" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
                <Label Text="Điều khoản và chính sách">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="5" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
                <Label Text="Giới thiệu bạn bè">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="6" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
                <Label Text="Góp ý">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="7" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
                <Label Text="Ngôn ngữ">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="8" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
                <Label Text="Đăng xuất">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding FeatureCommand}" CommandParameter="9" />
                    </Label.GestureRecognizers>
                </Label>
                <BoxView BackgroundColor="#08090C" HeightRequest="2" />
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
